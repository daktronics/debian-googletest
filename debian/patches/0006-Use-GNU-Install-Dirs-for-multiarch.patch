From: Steven Robbins <smr@debian.org>
Date: Sun, 8 Apr 2018 23:20:35 -0500
Subject: Use GNU Install Dirs for multiarch.

---
 CMakeLists.txt            | 2 ++
 googlemock/CMakeLists.txt | 2 +-
 googletest/CMakeLists.txt | 2 +-
 3 files changed, 4 insertions(+), 2 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index 8d2b552..727868f 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -2,6 +2,8 @@ cmake_minimum_required(VERSION 2.6.2)
 
 project( googletest-distribution )
 
+include(GNUInstallDirs)
+
 enable_testing()
 
 option(BUILD_GTEST "Builds the googletest subproject" OFF)
diff --git a/googlemock/CMakeLists.txt b/googlemock/CMakeLists.txt
index beb259a..e895cce 100644
--- a/googlemock/CMakeLists.txt
+++ b/googlemock/CMakeLists.txt
@@ -104,7 +104,7 @@ endif()
 #
 # Install rules
 install(TARGETS gmock gmock_main
-  DESTINATION lib)
+  DESTINATION ${CMAKE_INSTALL_LIBDIR})
 install(DIRECTORY ${gmock_SOURCE_DIR}/include/gmock
   DESTINATION include)
 
diff --git a/googletest/CMakeLists.txt b/googletest/CMakeLists.txt
index 823c28c..0e7f06d 100644
--- a/googletest/CMakeLists.txt
+++ b/googletest/CMakeLists.txt
@@ -104,7 +104,7 @@ endif()
 #
 # Install rules
 install(TARGETS gtest gtest_main
-  DESTINATION lib)
+  DESTINATION ${CMAKE_INSTALL_LIBDIR})
 install(DIRECTORY ${gtest_SOURCE_DIR}/include/gtest
   DESTINATION include)
 
