-GMOCK_DIR = ..
+GMOCK_DIR = $(dir $(lastword $(MAKEFILE_LIST)))..
 
 # Where to find user code.
-USER_DIR = ../test
+USER_DIR = $(dir $(lastword $(MAKEFILE_LIST)))../test
 
